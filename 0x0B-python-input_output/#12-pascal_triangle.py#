def pascal_triangle(n):
    """function to create pasccal triangle"""

    list_a = [1]
    list_b = [1]
    list_c = [0]
    print(list_a)
    for i in range(1, n):
        li
        list(list_a.insert(0, 0))
        list(list_b.append(0))
        
        for j in range(i):
            list_c[j] = list_a[j] + list_b[j]
            list_a = list_c
            list_b = list_c
        print(list_c)
